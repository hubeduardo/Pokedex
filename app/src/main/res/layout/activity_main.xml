<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintVertical_bias="0.935" android:id="@+id/tvNomePokemon"/>
    <EditText
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="41dp" tools:layout_editor_absoluteX="28dp" android:id="@+id/etPesquisa"/>
    <Button
            android:text="PESQUISAR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPesquisar" app:layout_constraintStart_toStartOf="@+id/etPesquisa"
            app:layout_constraintEnd_toEndOf="@+id/etPesquisa" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etPesquisa" app:layout_constraintHorizontal_bias="0.486"/>
    <ImageView
            android:layout_width="262dp"
            android:layout_height="326dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivImagem"
            app:layout_constraintStart_toStartOf="@+id/btPesquisar" app:layout_constraintEnd_toEndOf="@+id/btPesquisar"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/btPesquisar"/>

</androidx.constraintlayout.widget.ConstraintLayout>